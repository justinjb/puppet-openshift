# Settings related to the nsupdate variant of an OpenShift DNS plugin

# The DNS server
BIND_SERVER="<%= @openshift_bind_server -%>"

# The DNS server's port
BIND_PORT=<%= @openshift_bind_port -%>

# The base zone for the DNS server
BIND_ZONE="<%= @openshift_bind_zone -%>"

#
# Authentication information
#
# Provide either TSIG or GSS-TSIG information, but not both

# TSIG authentication
#
BIND_KEYNAME="<%= @openshift_bind_keyname -%>"
BIND_KEYVALUE="<%= @openshift_bind_keyvalue -%>"
#BIND_KEYVALUE=(HMAC-MD5|HMAC-SHA1|HMAC-SHA256|HMAC-512) # Default: HMAC-MD5

# GSS-TSIG (Kerberos) Authentication
# BIND_KRB_PRINCIPAL=""
# BIND_KRB_KEYTAB=""

